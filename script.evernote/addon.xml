<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.evernote"
       name="X-Note"
       version="0.1.0"
       provider-name="Rick Phillips (ruuk)">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
   </requires>

  <extension point="xbmc.python.script"
            library="default.py">
        <provides>image</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">X-Note: Access Evernote</summary>
    <description>View Evernote notebooks and notes, create notes, save XBMC logs and screenshots to Evernote</description>
	<platform>all</platform>
  </extension>
</addon>
